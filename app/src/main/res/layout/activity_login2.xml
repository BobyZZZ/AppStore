<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_placehold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="用户名"
            android:textColor="#ccc"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#ccc"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_placehold"
            tools:text="asdfjasljflasjflkasjdflhasdfhasdkjfhaskjdfhksajhfasjkdfhashdflkashdflajsdflkjaskdlhflaskdjflasjdflkjklfjalfks" />

        <ImageView
            android:id="@+id/iv_name_warming"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/warming"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_user_name"
            app:layout_constraintRight_toRightOf="@id/et_user_name"
            app:layout_constraintTop_toTopOf="@+id/et_user_name"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="用户名"
            android:textColor="#ccc"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_user_name"
            app:layout_constraintLeft_toLeftOf="@+id/et_user_name"
            app:layout_constraintTop_toTopOf="@+id/et_user_name"
            tools:visibility="visible" />
    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        android:singleLine="true"
        android:textColor="#000"
        android:textColorHint="#ccc"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_user_name"
        tools:text="asdfjasljflasjflkasjdflhasdfhasdkjfhaskjdfhksajhfasjkdfhashdflkashdflajsdflkjaskdlhflaskdjflasjdflkjklfjalfks" />

    <ImageView
        android:id="@+id/iv_id_warming"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/warming"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_id"
        app:layout_constraintRight_toRightOf="@id/et_id"
        app:layout_constraintTop_toTopOf="@+id/et_id"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="帐号"
        android:textColor="#ccc"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_id"
        app:layout_constraintLeft_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toTopOf="@+id/et_id" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#000"
        android:textColorHint="#ccc"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        tools:text="asdfjasljflasjflkasjdflhasdfhasdkjfhaskjdfhksajhfasjkdfhashdflkashdflajsdflkjaskdlhflaskdjflasjdflkjklfjalfks" />

    <ImageView
        android:id="@+id/iv_pwd_warming"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/warming"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_pwd"
        app:layout_constraintRight_toRightOf="@id/et_pwd"
        app:layout_constraintTop_toTopOf="@+id/et_pwd"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="密码"
        android:textColor="#ccc"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_pwd"
        app:layout_constraintLeft_toLeftOf="@+id/et_pwd"
        app:layout_constraintTop_toTopOf="@+id/et_pwd" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        android:text="登录"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd" />

    <TextView
        android:id="@+id/tv_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="没有帐号？去注册"
        android:textColor="#ccc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirm" />

    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="选择头像："
        android:textColor="#ccc"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_icon"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/layout_pb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80cccccc"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>